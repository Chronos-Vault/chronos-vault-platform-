{
  "name": "chronos-vault-docs",
  "version": "1.0.0",
  "description": "Comprehensive documentation hub for the Chronos Vault ecosystem - technical guides, whitepapers, integration examples, and educational resources",
  "main": "index.js",
  "scripts": {
    "build": "docusaurus build",
    "start": "docusaurus start",
    "serve": "docusaurus serve",
    "clear": "docusaurus clear",
    "deploy": "docusaurus deploy",
    "swizzle": "docusaurus swizzle",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "lint": "markdownlint docs/**/*.md",
    "lint:fix": "markdownlint docs/**/*.md --fix",
    "spell-check": "cspell \"docs/**/*.md\"",
    "pdf:whitepaper": "pandoc whitepapers/CVT_WHITEPAPER.md -o CVT_Whitepaper.pdf",
    "pdf:tokenomics": "pandoc whitepapers/CVT_TOKENOMICS_SPECIFICATION.md -o CVT_Tokenomics.pdf"
  },
  "keywords": [
    "documentation",
    "blockchain",
    "defi",
    "security",
    "multi-chain",
    "whitepaper",
    "trinity-protocol",
    "zero-knowledge",
    "quantum-resistant",
    "chronos-vault",
    "technical-docs",
    "api-reference"
  ],
  "author": "Chronos Vault Team",
  "license": "MIT",
  "homepage": "https://github.com/Chronos-Vault/chronos-vault-docs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chronos-Vault/chronos-vault-docs.git"
  },
  "bugs": {
    "url": "https://github.com/Chronos-Vault/chronos-vault-docs/issues"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.0.0",
    "@docusaurus/preset-classic": "^3.0.0",
    "@docusaurus/module-type-aliases": "^3.0.0",
    "@docusaurus/theme-mermaid": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "cspell": "^8.0.0",
    "markdownlint-cli": "^0.37.0",
    "pandoc": "^0.2.0",
    "prism-react-renderer": "^2.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@docusaurus/plugin-content-docs": "^3.0.0",
    "@docusaurus/plugin-content-blog": "^3.0.0",
    "@docusaurus/plugin-content-pages": "^3.0.0",
    "@docusaurus/plugin-sitemap": "^3.0.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
